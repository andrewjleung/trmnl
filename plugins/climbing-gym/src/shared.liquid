{% template gauge_setup %}
<!-- import Highcharts libraries -->
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/highcharts-more.js"></script>
<script src="https://code.highcharts.com/modules/pattern-fill.js"></script>

{% capture element_id %}{{ trmnl.plugin_settings.instance_name | downcase | replace: " ", "_" | append: "_gauge" }}{% endcapture %}

<div class="layout layout--col layout--center-x">
  <div class="grid grid--cols-1">
    {% if count and capacity %}
      <div id="{{ element_id }}"></div>
    {% else %}
      <span class="title">Failed to fetch capacity from RockGymPro...</span>
    {% endif %}
  </div>
</div>

<script type="text/javascript">
  function createGauge(count, capacity, opts) {
    Highcharts.chart("{{ element_id }}", {
      chart: {
        type: "gauge",
        height: opts.height,
        animation: false,
      },

      title: {
        text: opts.title,
      },

      pane: {
        startAngle: -150,
        endAngle: 150,
        background: {
          backgroundColor: "transparent",
          borderWidth: 0,
        },
      },

      plotOptions: {
        gauge: {
          animation: false,
          pivot: {
            backgroundColor: "transparent",
          },
          dial: {
            backgroundColor: "transparent",
            baseWidth: 0,
          },
        },
      },

      credits: {
        enabled: false
      },

      yAxis: {
        min: 0,
        max: capacity,
        minorTickInterval: 0,
        tickColor: "#ffffff",
        tickLength: 100,
        tickPixelInterval: opts.yAxis.tickPixelInterval || 100,
        tickWidth: 0,
        lineWidth: 0,
        title: {
          text: opts.yAxis.title,
          style: {
            color: "#000000",
            fontFamily: "NicoPups",
            fontSize: opts.yAxis.fontSize || "16px",
          },
        },
        labels: opts.labels,
        plotBands: [
          {
            from: 1,
            to: count,
            color: {
              pattern: {
                image: "https://usetrmnl.com/images/grayscale/gray-2.png",
                width: 12,
                height: 12,
              },
            },
            innerRadius: "82%",
            borderRadius: "60%",
          },
          {
            from: count + 1,
            to: 100,
            color: {
              pattern: {
                image: "https://usetrmnl.com/images/grayscale/gray-5.png",
                width: 12,
                height: 12,
              },
            },
            innerRadius: "82%",
            borderRadius: "60%",
          },
        ],
      },

      series: [
        {
          name: "count",
          data: [count],
          dataLabels: {
            borderWidth: 0,
            y: opts.series.position || 0,
            style: {
              fontSize: opts.series.fontSize,
              fontWeight: opts.series.fontWeight || "400",
              fontFamily: opts.series.fontFamily || "inherit",
            },
          },
        },
      ],
    });
  }

  var count = {{ count | default 0 }};
  var capacity = {{ capacity | default 0 }};
</script>
{% endtemplate %}

{% template title_bar %}
<div class="title_bar">
  <img class="image-dither w--6 h--6" src="https://movementgyms.com/favicon.ico" />

  <span class="title">
    {{ trmnl.plugin_settings.instance_name }}
  </span>

  <span class="instance">
    As of {{ trmnl.system.timestamp_utc | plus: trmnl.user.utc_offset | date: "%I:%M%p" | }}
  </span>
</div>
{% endtemplate %}
