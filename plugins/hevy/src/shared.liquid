{% template set %}
<span class="label {% if small %}label--small{% endif %} label--inverted">
    {% if set.weight_kg %}
        {{ set.weight_kg | times: 2.2046226218 | round }}
    {% endif %}

    {% if set.weight_kg and set.reps %}
        x
    {% endif %}

    {% if set.reps %}
        {{ set.reps }}
    {% endif %}

    {% if set.duration_seconds %}
        {% if set.duration_seconds < 3600 %}
            for {{ set.duration_seconds | date: '%M:%S' }}
        {% else %}
            for {{ set.duration_seconds | date: '%H:%M:%S' }}
        {% endif %}
    {% endif %}

    {% if set.rpe %}
        @ {{ set.rpe }}
    {% endif %}
</span>
{% endtemplate %}

{% template title_bar %}
{% if workouts.size < 1 %}
    <div class="title_bar">
        <img
            class="image-dither"
            style="border-radius:100%;transform:scale(0.7)"
            src="https://www.hevyapp.com/favicon.ico"
        >
        <span class="title">Hevy</span>
    </div>
{% else %}
    <div class="title_bar">
        <img
            class="image-dither"
            style="border-radius:100%;transform:scale(0.7)"
            src="https://www.hevyapp.com/favicon.ico"
        >

        {% if no_title %}
            <span class="title">Hevy</span>
        {% else %}
            <span class="title">{{ workouts[0].title }}</span>
        {% endif %}

        <span class="instance">
            {{ workouts[0].start_time | date: '%s' | plus: trmnl.user.utc_offset | date: '%a, %B %d at %l:%M%p' }}
        </span>
    </div>
{% endif %}
{% endtemplate %}
